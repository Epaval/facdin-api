# Server Configuration
PORT=3000
NODE_ENV=development
APP_NAME=FacDin-API
APP_VERSION=1.0.0

# Database Configuration
DB_DIALECT=postgres
DB_NAME=facdin_db
DB_USER=facdin_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Security
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Keys (opcional)
SENIAT_API_KEY=your_seniat_api_key_here
EMAIL_API_KEY=your_email_service_key_here

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads